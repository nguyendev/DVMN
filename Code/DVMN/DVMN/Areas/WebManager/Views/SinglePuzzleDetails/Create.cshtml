@section Scripts{
<script type="text/javascript">
    for (i = 0; i < @number; i++)
    {
        $('#form_'+i).submit(function (e) {
            var SinglePuzzleDetails = {
                Title: $('#Title_'+i).attr('value'),
                Description: $('#Description_'+i).attr('value')
            };
            $.ajax({
                type: "POST",
                url: "@(Url.Action("Create", "SinglePuzzleDetails"))",
                data: { SinglePuzzleDetails: SinglePuzzleDetails,id:i },
                dataType: "json",
                success: function (data) {
                    if (data == "1") {
                        alert("Successfull login.");
                    } else {
