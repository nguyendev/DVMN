@model DVMN.Models.SidebarViewModels.AllSidebarViewModel

<div class="widget widget_stats">
    <h3 class="widget_title">Thống kê</h3>
    <div class="ul_list ul_list-icon-ok">
        <ul>
            <li><a asp-controller="Puzzle" asp-action="ListSinglePuzzle"><i class="icon-question-sign"></i>Câu hỏi đơn ( <span>@Model.CountSinglePuzzle</span> )</a></li>
            <li><a asp-controller="Puzzle" asp-action="ListMultiPuzzle"><i class="icon-comment"></i>Câu hỏi đa ( <span>@Model.CountMultiPuzzle</span> )</a></li>
        </ul>
    </div>
</div>

<div class="widget widget_social">
    <h3 class="widget_title">Tìm chúng tôi</h3>
    <ul>
        <li class="rss-subscribers">
            <a href="#" target="_blank">
                <strong>
                    <i class="icon-rss"></i>
                    <span>Subscribe</span><br>
                    <small>To RSS Feed</small>
                </strong>
            </a>
        </li>
        <li class="facebook-fans">
            <a href="#" target="_blank">
                <strong>
                    <i class="social_icon-facebook"></i>
                    <span>5,000</span><br>
                    <small>People like it</small>
                </strong>
            </a>
        </li>
        <li class="twitter-followers">
            <a href="#" target="_blank">
                <strong>
                    <i class="social_icon-twitter"></i>
                    <span>3,000</span><br>
                    <small>Followers</small>
                </strong>
            </a>
        </li>
        <li class="youtube-subs">
            <a href="#" target="_blank">
                <strong>
                    <i class="icon-play"></i>
                    <span>1,000</span><br>
                    <small>Subscribers</small>
                </strong>
            </a>
        </li>
    </ul>
</div>

